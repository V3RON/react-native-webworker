---
import Layout from '../layouts/LandingLayout.astro';
import { Code } from 'astro:components';
import GridBackground from '../components/GridBackground.astro';
import WebWorkerLogo from '../components/WebWorkerLogo.astro';

const codeMain = `import { Worker } from 'react-native-webworker';

// Start a new thread
const worker = new Worker(new URL('./worker.ts', import.meta.url));

worker.onmessage = (event) => {
  console.log('Result from background:', event.data);
};

// Send heavy data off the UI thread
worker.postMessage({ 
  task: 'process_image', 
  payload: largeBuffer 
});`;

const codeWorker = `// worker.ts
// ðŸš€ This runs in a separate thread!

self.onmessage = (event) => {
  const { task, payload } = event.data;
  
  // Do heavy computation...
  const result = heavyProcessing(payload);

  // Send result back
  self.postMessage(result);
};`;
---

<Layout title="React Native WebWorker | True Multithreading">
	<div class="relative w-full overflow-hidden min-h-screen bg-[#030303]">
		
		<!-- Metro map background -->
		<GridBackground />

		<!-- Top glow -->
		<div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-gradient-to-b from-white/5 to-transparent blur-[80px] pointer-events-none z-0"></div>

		<nav class="relative z-50 w-full max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
			<div class="flex items-center gap-3 font-semibold text-lg tracking-tight text-white">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-zinc-400">RN WebWorker</span>
			</div>
			
			<!-- Desktop Menu -->
			<div class="hidden md:flex items-center gap-8 text-sm font-medium text-zinc-400">
				<a href="/getting-started" class="hover:text-white transition-colors">Documentation</a>
				<a href="https://www.npmjs.com/package/react-native-webworker" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">NPM</a>
				<a href="https://github.com/V3RON/react-native-webworker" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-white hover:text-zinc-200 transition-colors">
